{
  "name": "crgdatatool",
  "version": "0.3.0",
  "description": "A tool for working with Games Data files from CRG",
  "main": "main.js",
  "author": "Adam Smasher <dan@fnerk.com>",
  "license": "MIT",
  "private": false,
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "devDependencies": {
    "devtron": "^1.4.0",
    "electron": "2.0.0",
    "electron-builder": "20.8.1",
    "eslint": "^4.19.1"
  },
  "dependencies": {
    "bootstrap": "^4.1.0",
    "electron-debug": "^2.0.0",
    "electron-is-dev": "^0.3.0",
    "font-awesome": "^4.7.0",
    "jquery": "^3.3.1",
    "moment": "^2.22.1",
    "popper.js": "1.14.0",
    "typeface-raleway": "^0.0.54",
    "uuid": "^3.2.1",
    "xlsx": "^0.12.10",
    "xlsx-populate": "^1.14.0",
    "xlsx-style": "^0.8.13"
  },
  "build": {
    "appId": "crgdatatool",
    "productName": "CRG Data Tool",
    "directories": {
      "buildResources": "build",
      "output": "dist"
    },
    "dmg": {
      "contents": [
        {
          "x": 110,
          "y": 150
        },
        {
          "x": 240,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "linux": {
      "icon": "build/flamingo-white.png",
      "target": [
        "AppImage"
      ]
    },
    "win": {
      "target": "NSIS",
      "icon": "build/flamingo-white.ico"
    },
    "nsis": {
      "license": "LICENSE",
      "createDesktopShortcut": false
    },
    "extraFiles": [
      "assets/wftda-statsbook-base-us-letter.xlsx"
    ]
  }
}
