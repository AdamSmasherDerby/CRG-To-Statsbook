{
  "name": "crgdatatool",
  "version": "0.0.1",
  "description": "A tool for working with Games Data files from CRG",
  "main": "main.js",
  "author": "Adam Smasher <dan@fnerk.com>",
  "license": "MIT",
  "private": false,
  "scripts": {
    "start": "electron ."
  },
  "devDependencies": {
    "electron": "^1.8.4",
    "eslint": "^4.19.1"
  },
  "dependencies": {
    "bootstrap": "^4.1.0",
    "jquery": "^3.3.1",
    "moment": "^2.22.1",
    "popper.js": "1.14.0",
    "typeface-raleway": "^0.0.54",
    "xlsx": "^0.12.10",
    "xlsx-populate": "^1.14.0",
    "xlsx-style": "^0.8.13"
  },
  "build": {
    "appId": "crgdatatool",
    "productName": "CRG Data Tool",
    "directories": {
      "buildResources": "build",
      "output": "dist"
    },
    "dmg": {
      "contents": [
        {
          "x": 110,
          "y": 150
        },
        {
          "x": 240,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "linux": {
      "icon": "build/flamingo-white.png",
      "target": [
        "AppImage"
      ]
    },
    "win": {
      "target": "NSIS",
      "icon": "build/flamingo-white.ico"
    },
    "nsis": {
      "license": "LICENSE"
    }
  }
}
